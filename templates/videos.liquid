{% block content %}
	<h1>Portfolio</h1>
	<!-- Display a group for portfolio by category -->
	{% grouped 'videos' by 'category' %}
			<div class="cat">{% include "videos/category" with grouped.items %}</div>
	{% endgrouped %}
	<!-- Display a list of portfolio items, but allow queries by route category (see mixture.json for routes) order desc -->
	{% collection "videos" query 'category={{ mixture.route.category }}' order desc %}
		<ul class="portfolio-items">{% include "videos/small" with collection.items %}</ul>
	{% endcollection %}
{% endblock %}